<% provide(:title, 'Login') %>

<div class="row">
  <div class="span6 offset3">
    <h1>Login</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Login", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>New user? <%= link_to "Sign up!", signup_path %></p>
  </div>
</div>