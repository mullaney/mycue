<h1>Listing lines</h1>

<table class="table table-striped">
  <tr>
    <th>Scene</th>
    <th>Character</th>
    <th>Cue</th>
    <th>Line</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lines.each do |line| %>
  <tr>
    <td><%= line.scene_id %></td>
    <td><%= line.character_id %></td>
    <td><%= line.cue %></td>
    <td><%= line.line %></td>
    <td><%= line.order %></td>
    <td><%= link_to 'Show', line, :class => "btn .btn-mini btn-primary" %></td>
    <td><%= link_to 'Edit', edit_line_path(line), :class => "btn .btn-mini btn-success" %></td>
    <td><%= link_to 'Destroy', line, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn .btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

