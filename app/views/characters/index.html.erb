<h1>Listing characters</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Script</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr id="character_<%= character.id %>">
    <td><%= character.name %></td>
    <td><%= character.script_id %></td>
    <td><%= link_to 'Show', character, :class => "btn .btn-mini btn-primary" %></td>
    <td><%= link_to 'Edit', edit_character_path(character), :class => "btn .btn-mini btn-success" %></td>
    <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn .btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

