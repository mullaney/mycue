<h1>Listing scripts</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scripts.each do |script| %>
  <tr>
    <td><%= script.title %></td>
    <td><%= link_to 'Show', script, :class => "btn .btn-mini btn-primary" %></td>
    <td><%= link_to 'Edit', edit_script_path(script), :class => "btn .btn-mini btn-success" %></td>
    <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn .btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

