<h1>Listing scenes</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Script</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scenes.each do |scene| %>
  <tr id="scene_<%= scene.id %>">
    <td><%= scene.name %></td>
    <td><%= scene.script_id %></td>
    <td><%= scene.order %></td>
    <td><%= link_to 'Show', scene, :class => "btn .btn-mini btn-primary" %></td>
    <td><%= link_to 'Edit', edit_scene_path(scene), :class => "btn .btn-mini btn-success" %></td>
    <td><%= link_to 'Destroy', scene, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn .btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

